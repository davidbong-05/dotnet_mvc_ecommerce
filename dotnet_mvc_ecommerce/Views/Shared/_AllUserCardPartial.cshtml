@using Microsoft.AspNetCore.Identity
@using dotnet_mvc_ecommerce.Areas.Identity.Data

@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

<div class="card m-4 p-4">
    <div class="card-title">
        All User Action
    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="btn btn-primary my-2" asp-controller="Product" asp-action="Index">View Product</a>
        <a id="manage" class="btn btn-primary my-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage Account</a>

        <form id="logoutForm" class="form-inline my-2 text-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-danger">Logout</button>
        </form>

    }
    else
    {

        <a class="btn btn-primary my-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>

        <a class="btn btn-primary my-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>

    }
</div>
